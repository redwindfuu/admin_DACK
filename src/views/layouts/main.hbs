  <script > 
   const args=window.location.href.toString().split("/");
   const current=args[args.length-1];
   console.log(current);
   const divll=document.getElementsByClassName("nav-link");
   console.log(divll.length);
   const len=divll.length;
   for (let i=0;i<len;i++)
   {
     if (divll[i].getAttribute("href")=="/"+current)
     {
       divll[i].className="nav-link active";
     }
     else{
       divll[i].className="nav-link";
     }
   }
  </script>
